<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyEdu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <style>
        #logo{
            height : 30px;
            width : 30px;
            margin-right : 5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="gradient navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img id="logo" src="~/img/logo.png"/>
                <a class="navbar-brand" asp-page="Index">EasyEdu</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="Acc"><b>Аккаунт</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="News"><b>Новости</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="Chatroom"><b>Чат</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="Diary"><b>Расписание</b></a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <a class="nav-link text-dark" asp-page="Admin"><b>Управление</b></a>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="white border-top footer text-muted">
        <div class="container">
            &copy; 2020 - EasyEdu - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
